<section class="mt-5 pt-5 ">
        <div class="container cl-12 col-sm-6 col-md-5 col-lg-4 pt-5 mt-4 d-flex justify-content-center">
            <div class="row pb-4 pt-3" style="background-color: aqua; border-radius: 6px; width:fit-content">
                
                   <h2 class="text-center fw-bold">To Do list</h2>
                   <div class="row ">
                       <div class="d-flex justify-content-center">
                           
                            <ul class="ps-5">
                                {{#each tasks}}
                                <li class="fs-5 fw-normal">{{this.item}}</li>
                                {{/each}}
                            </ul>
                            
                   </div>
                   </div>
                   <div class="row ">
                       
                           <form class="pt-4 " action="/" method="POST" >
                            <div class="mb-3 ps-4 text-center">
                                <label class="form-label pe-2">Add here</label>
                                <input type="text" class="form-control"  name="text">
                            </div>
                            <div class="cl-lg-4 ps-4 text-center mb-3 pb-2">
                                <button type="submit" name="add" class="btn btn-success">Add</button>
                            </div>
                            </form>
                            <div class="cl-lg-4 ps-5 pe-4 text-center mb-3 pb-2">
                                <form action="/dl" method="POST">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                            </div>
                    </div>
            </div>
        </div>
    </section>

